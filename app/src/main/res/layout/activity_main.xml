<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="YUSUF DWI MUNIF APRILIYALDY"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="21dp"
        android:text=" Nama " />

    <EditText
        android:id="@+id/masukannama"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:text="Yusuf Dwi Munif Apriliyaldy"
        android:textStyle="bold"
        android:layout_below="@+id/nama"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp" />
    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="21dp"
        android:text=" Alamat" />

    <EditText
        android:id="@+id/masukanalamat"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:text="Jl. Kopo"
        android:textStyle="bold"
        android:layout_below="@+id/alamat"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp" />
    <TextView
        android:id="@+id/kampus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="21dp"
        android:text=" Kampus" />

    <EditText
        android:id="@+id/masukankampus"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:text="SMKN 4 Bandung"
        android:textStyle="bold"
        android:layout_below="@+id/kampus"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="210dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/foto"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="210dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="160dp"
        android:src="@drawable/foto"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="210dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/foto" />

    <Button
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="40dp"
        android:text="Kembali" />
    <Button
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="220dp"
        android:text="Next" />
</RelativeLayout>